<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="360" d:DesignHeight="800"
             x:Class="TcpShare.Views.ChoiceView">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Name="SendBtn" 
                    Click="SendBtn_OnClick"
                    Width="120" 
                    Height="30"
                    Margin="0 0 0 10">
                <TextBlock HorizontalAlignment="Center"
                           VerticalAlignment="Center">
                    Send
                </TextBlock>
            </Button>
            <Button Name="ReceiveBtn" 
                    Click="ReceiveBtn_OnClick"
                    Width="120" 
                    Height="30"
                    Margin="0 0 0 0">
                <TextBlock HorizontalAlignment="Center"
                           VerticalAlignment="Center">
                    Receive
                </TextBlock>
            </Button>
        </StackPanel>
        
        <Button Name="InfoBtn" 
                Click="InfoBtn_OnClick"
                Width="30" 
                Height="30"
                Margin="30"
                HorizontalAlignment="Right"
                VerticalAlignment="Top" CornerRadius="15">
            <TextBlock HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Margin="2 0 0 0"
                       FontWeight="Bold"
                       FontSize="16">
                i
            </TextBlock>
        </Button>
    </Grid>
</UserControl>
