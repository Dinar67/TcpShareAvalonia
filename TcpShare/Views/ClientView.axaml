<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:services="clr-namespace:TcpShare.Services"
             mc:Ignorable="d" d:DesignWidth="360" d:DesignHeight="800"
             x:Class="TcpShare.Views.ClientView">
    <Grid>
        <Button Name="BackBtn" 
                Click="BackBtn_OnClick" 
                Width="100" Height="30" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Top" 
                Margin="0 40 15 0">
            <TextBlock HorizontalAlignment="Center"
                       VerticalAlignment="Center">Back
            </TextBlock>
        </Button>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock FontSize="28" HorizontalAlignment="Center" FontWeight="Bold" Margin="0 0 0 40">Receive</TextBlock>
            
            <TextBlock Name="FileNameTb" Margin="0 0 0 5" Width="220"></TextBlock>
            <ProgressBar Name="FileReceivePb" Margin="0 0 0 10" Height="30" Width="220" Minimum="0" Maximum="1"></ProgressBar>
            
            <StackPanel Margin="0 0 0 10">
                <Grid Margin="0 0 0 3">
                    <TextBlock Margin="10 0 0 0"
                               VerticalAlignment="Center"
                               FontSize="18">Devices:</TextBlock>
                    <Button Name="RefreshBtn"
                            Click="RefreshBtn_OnClick"
                            Width="30" Height="30"
                            HorizontalAlignment="Right">
                        <TextBlock HorizontalAlignment="Center"
                                   VerticalAlignment="Center">‚ü≥</TextBlock>
                    </Button>
                </Grid>
                <ListBox Name="DevicesLb" 
                         Height="150"
                         SelectionChanged="DevicesLb_OnSelectionChanged">
                    <ListBox.ItemTemplate>
                        <DataTemplate DataType="{x:Type services:UdpDevice}">
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center">
                                <TextBlock Text="{Binding DeviceName}"
                                           Margin="0 0 10 0"></TextBlock>
                                <TextBlock Text="{Binding IpAdrress}"></TextBlock>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
            
            <Button Name="ConnectBtn"
                    Click="ConnectBtn_OnClick"
                    Height="30" Width="220"
                    Margin="0 0 0 10">
                <TextBlock HorizontalAlignment="Center"
                           VerticalAlignment="Center">Connect
                </TextBlock>
            </Button>
        </StackPanel>

        <TextBlock Name="DebugText" IsVisible="False" FontSize="16" Foreground="GreenYellow" HorizontalAlignment="Right" VerticalAlignment="Top">Server connected...</TextBlock>
    </Grid>
</UserControl>
